{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "Basic typescript setup for tdd",
  "main": "src/index.ts",
  "private": true,
  "devDependencies": {
    "@types/jest": "23.3.12",
    "jest": "23.6.0",
    "ts-jest": "23.10.5",
    "typescript": "3.2.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true,
          "ignoreCodes": [
            "TS151001"
          ]
        }
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setup.ts",
    "collectCoverage": true
  }
}
