{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "Basic typescript setup for tdd",
  "packageManager": "pnpm@7.1.6",
  "private": true,
  "scripts": {
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "typecheck": "tsc --noEmit",
    "build": "tsc"
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@jest/types": "28.1.0",
    "@jest/globals": "28.1.0",
    "@jest/reporters": "28.1.0",
    "@jest/test-result": "28.1.0",
    "@signed/prettier-config": "0.1.0",
    "@sinonjs/fake-timers": "9.1.2",
    "@testdeck/jest": "0.2.0",
    "@testing-library/dom": "8.13.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.2.0",
    "@testing-library/user-event": "14.2.0",
    "@types/node": "17.0.35",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.5",
    "@types/sinonjs__fake-timers": "8.1.2",
    "babel-jest": "28.1.0",
    "babel-preset-react-app": "10.0.1",
    "expect": "28.1.0",
    "jest": "28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "jest-junit": "13.2.0",
    "jest-mock": "28.1.0",
    "prettier": "2.6.2",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "testing-library-selector": "0.2.1",
    "typescript": "4.7.2"
  },
  "jest": {
    "reporters": [
      "default",
      "<rootDir>/build/tsc/jest/reporter.js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/before-tests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.tests.{ts,tsx}"
    ],
    "coverageDirectory": "<rootDir>/build/coverage",
    "collectCoverage": false,
    "resetMocks": true,
    "testEnvironment": "jsdom"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "<rootDir>/build/junit",
    "outputName": "junit.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "prettier": "@signed/prettier-config"
}
