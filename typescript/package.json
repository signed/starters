{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "Basic typescript setup for tdd",
  "main": "src/index.ts",
  "private": true,
  "devDependencies": {
    "@types/jest": "23.3.9",
    "jest": "23.6.0",
    "ts-jest": "23.10.4",
    "typescript": "3.1.6"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true,
          "ignoreCodes": [
            "TS151001"
          ]
        }
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ]
  }
}
