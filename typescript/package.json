{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "Basic typescript setup for tdd",
  "packageManager": "pnpm@7.4.1",
  "private": true,
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "build": "tsc"
  },
  "devDependencies": {
    "@babel/core": "7.18.6",
    "@jest/globals": "28.1.2",
    "@jest/types": "28.1.1",
    "@signed/prettier-config": "0.1.0",
    "@sinonjs/fake-timers": "9.1.2",
    "@testdeck/jest": "0.2.0",
    "@testing-library/dom": "8.14.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@testing-library/user-event": "14.2.1",
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@types/sinonjs__fake-timers": "8.1.2",
    "babel-jest": "28.1.2",
    "babel-preset-react-app": "10.0.1",
    "expect": "28.1.1",
    "jest": "28.1.2",
    "jest-environment-jsdom": "28.1.2",
    "jest-mock": "28.1.1",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "testing-library-selector": "0.2.1",
    "typescript": "4.7.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/before-tests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.tests.{ts,tsx}"
    ],
    "coverageDirectory": "<rootDir>/build/coverage",
    "collectCoverage": false,
    "resetMocks": true,
    "testEnvironment": "jsdom"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "prettier": "@signed/prettier-config"
}
