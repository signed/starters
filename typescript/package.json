{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "Basic typescript setup for tdd",
  "packageManager": "pnpm@8.7.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "private": true,
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "format": "prettier --write .",
    "nit-pick": "pnpm format && pnpm typecheck && pnpm test"
  },
  "devDependencies": {
    "@babel/core": "7.22.11",
    "@babel/preset-env": "7.22.14",
    "@babel/preset-typescript": "7.22.11",
    "@jest/globals": "29.7.0",
    "@jest/types": "29.6.3",
    "@signed/prettier-config": "0.1.0",
    "@sinonjs/fake-timers": "11.1.0",
    "@testing-library/dom": "9.3.1",
    "@testing-library/jest-dom": "6.1.2",
    "@testing-library/user-event": "14.4.3",
    "@tsconfig/node20": "20.1.2",
    "@tsconfig/strictest": "2.0.2",
    "@types/node": "20.5.8",
    "@types/sinonjs__fake-timers": "8.1.2",
    "babel-jest": "29.7.0",
    "expect": "29.7.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-mock": "29.7.0",
    "prettier": "3.0.3",
    "testing-library-selector": "0.2.1",
    "typescript": "5.2.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest/before-tests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.tests.{ts,tsx}"
    ],
    "coverageDirectory": "<rootDir>/build/coverage",
    "collectCoverage": false,
    "resetMocks": true,
    "testEnvironment": "jsdom"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "prettier": "@signed/prettier-config"
}
